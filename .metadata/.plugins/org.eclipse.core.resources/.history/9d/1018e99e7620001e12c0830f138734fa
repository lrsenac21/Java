package funcoesMatematicas;

import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		
		double x = 3.0;
		double y = 4.0;
		double z=-5.0;
		double A, B, C;
		
		
		A = Math.sqrt(x);
		B = Math.sqrt(y);
		C = Math.sqrt(25.0);
		
		System.out.printf("A raiz quadrada de %.3f é = %.2f %n", x, A);
		System.out.printf("A raiz quadrada de %.2f é = %.1f %n", y, B);
		System.out.printf("A raiz quadrada de 25 é %.1f %n", C);
		
		A = Math.pow(x, y);
		B = Math.pow(x,  2.0);
		C = Math.pow(5.0, 2.0);
		
		System.out.printf("%.1f elevado a %.1f = %.1f %n", x, y, A);
		System.out.printf("%.1f elevado ao quadrado = %.1f %n", x, B);
		System.out.printf("5 elevado ao quadrado = %.1f %n", C);
		
		
		
		

	}

}
